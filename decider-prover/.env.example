RUST_LOG="decider_prover=info,folding_schemes=warn"

# Postgres connection string used by pgmq/sqlx
DATABASE_URL=postgres://postgres:postgres@localhost:5432/decider

# Location of Nova parameters (relative paths are resolved from the workspace root)
ARTIFACTS_DIR=./nova_artifacts

# Queue configuration
QUEUE_NAME=prover_queue
JOB_TABLE=prover_jobs

# HTTP server configuration
LISTEN_ADDR=0.0.0.0:8081
JSON_BODY_LIMIT_BYTES=41943040

# Job lifecycle parameters
JOB_TTL_SECONDS=86400
VISIBILITY_TIMEOUT_SECONDS=900
VISIBILITY_EXTENSION_SECONDS=60

# Circuits to initialize (comma-separated values of root, withdraw_local, withdraw_global)
ENABLED_CIRCUITS=root,withdraw_global

# Number of worker threads to spawn
WORKER_COUNT=1