# Path to the shared tokens configuration JSON (see client-common/tokens.rs schema).
TOKENS_FILE_PATH=../config/tokens.json

# Hex-encoded 32-byte private key used for all relay/broadcast submissions.
RELAY_PRIVATE_KEY=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# LayerZero options payloads for relayTransferRoot and Hub.broadcast.
RELAY_OPTIONS=0x00030100110100000000000000000000000000030d40 # 0.2m gas limit
BROADCAST_OPTIONS=0x00030100110100000000000000000000000000030d40 # 0.2m gas limit

# Interval cadence in seconds for each job loop.
RELAY_INTERVAL_SECS=300
BROADCAST_INTERVAL_SECS=600

# Native fee safety buffer in basis points (1000 = +10%).
RELAY_NATIVE_FEE_BUFFER_BPS=1000
BROADCAST_NATIVE_FEE_BUFFER_BPS=1000

# Set to true to execute jobs once and exit (useful for smoke tests).
JOB_ONCE=false
