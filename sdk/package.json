{
  "name": "@zerc20/sdk",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && pnpm run copy-assets",
    "copy-assets": "rm -rf dist/assets && mkdir -p dist/assets && cp -R src/assets/. dist/assets/",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@dfinity/agent": "3.4.1",
    "@dfinity/candid": "3.4.1",
    "@dfinity/principal": "3.4.1",
    "@dfinity/vetkeys": "0.4.0",
    "@noble/curves": "^1.4.0",
    "base64-arraybuffer": "^1.0.2",
    "pako": "^2.1.0",
    "poseidon-lite": "^0.0.2",
    "viem": "^2.38.6",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/pako": "^2.0.4",
    "@types/node": "^24.10.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2",
    "vitest": "^4.0.8"
  }
}
